
    <!-- Login -->
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
          <div class="col-lg-12 login-key">
            <p class="h1 mt-5">CONTACT LIST</p>
          </div>
          <div class="col-lg-12 login-title mt-0">LOGIN</div>

          <div class="col-lg-12 login-form">
            <div class="col-lg-12 login-form">
              <form action="/login" method="POST">
                <div class="form-group">
                  <label class="form-control-label">EMAIL</label>
                  <input type="email" name="email" required class="form-control" />
                </div>
                <div class="form-group">
                  <label class="form-control-label">PASSWORD</label>
                  <input type="password" name="password"  required class="form-control" i />
                </div>
                <div class="form-group m-3">
                  <a
                    href="forgot-password"
                    style="float: left; font-size: 12px"
                    class="form-control-label mb-4"
                    >Forgot password?</a
                  >
                  <a
                    href="create-account"
                    style="float: right; font-size: 12px"
                    class="form-control-label mb-4"
                    >Create an account.</a
                  >
                </div>
                <div class="col-lg-12 loginbttm">
                  <div class="col-lg-6 login-btm login-text">
                    <!-- Error Message -->
                  </div>
                  <div class="col-12 login-btm login-button">
                    <button type="submit" class="btn btn-outline-primary">
                      LOGIN
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="col-lg-3 col-md-2"></div>
        </div>
      </div>
    </div>
